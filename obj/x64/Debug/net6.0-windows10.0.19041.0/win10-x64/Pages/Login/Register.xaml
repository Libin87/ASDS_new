<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ASDS_dev.Pages.Register"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Background="LightBlue">
        
        <Grid  Height="700" Width="500" BorderBrush="DarkBlue"  BorderThickness="3"  Background="LightGray" CornerRadius="8">
            <StackPanel>
                <TextBlock TextAlignment="Center" FontSize="40" Margin="0,30,0,50" Foreground="Indigo">Register</TextBlock>
                <Button x:ConnectionId='3' HorizontalAlignment="Left"
VerticalAlignment="Top"
Margin="10"
                  
            CornerRadius="6"
Width="59" Height="50"
Background="Transparent"
BorderThickness="0">
                    <Image Source="/Assets/homeLogo.jpg"
   Width="44"
   Height="44"/>
                </Button>

                <TextBlock FontSize="15" Margin="98,7,0,15">Username</TextBlock>
                <TextBox x:ConnectionId='4' x:Name="usernameBox" Width="300" CornerRadius="3"                                  />
                <TextBlock x:ConnectionId='5' x:Name="usernameError" Foreground="Red" FontSize="12" Visibility="Collapsed" Margin="100,2,0,10"/>
                <TextBlock FontSize="15" Margin="98,2,0,15">Firstname</TextBlock>
                <TextBox x:ConnectionId='6' x:Name="FirstNameBox" Width="300" CornerRadius="3"                                   />
                <TextBlock x:ConnectionId='7' x:Name="FirstNameError" Foreground="Red" FontSize="12" Visibility="Collapsed" Margin="100,2,0,10"/>

                <TextBlock FontSize="15" Margin="98,7,0,15">LastName</TextBlock>
                <TextBox x:ConnectionId='8' x:Name="LastNameBox" Width="300" CornerRadius="3"                                  />
                <TextBlock x:ConnectionId='9' x:Name="LastNameError" Foreground="Red" FontSize="12" Visibility="Collapsed" Margin="100,2,0,10"/>

                

                <TextBlock FontSize="15" Margin="98,7,0,15">Password</TextBlock>
                <PasswordBox x:ConnectionId='10' x:Name="PasswordBox" Width="300" CornerRadius="3"                                  />
                <TextBlock x:ConnectionId='11' x:Name="PasswordError" Foreground="Red" FontSize="12" Visibility="Collapsed" Margin="100,2,0,10"/>

                <TextBlock FontSize="15" Margin="98,7,0,15">ConfirmPassword</TextBlock>
                <PasswordBox x:ConnectionId='12' x:Name="ConfirmBox" Width="300" CornerRadius="3"                                 />
                <TextBlock x:ConnectionId='13' x:Name="ConfirmError" Foreground="Red" FontSize="12" Visibility="Collapsed" Margin="100,2,0,10"/>

                <Button x:ConnectionId='14' Content="Register" Margin="97,8,0,15" CornerRadius="4"                       />
            </StackPanel>
            <HyperlinkButton x:ConnectionId='2' Grid.Row="2" Content="Already have an account? Login"
                                             
                         HorizontalAlignment="Center"
                         VerticalAlignment="Bottom"
                         Margin="0,10,0,20"
                         Foreground="Blue"
                         FontSize="14"/>

        </Grid>
    </Grid>
</Page>

