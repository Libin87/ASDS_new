<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="ASDS_dev.Pages.UserManagement.UserManagement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ASDS_dev.Pages.UserManagement"
    xmlns:controls="using:ASDS_dev.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Main Content -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Header Control -->
        <controls:HeaderControl Grid.Row="0" />

        <!-- Main content placeholder -->
        <Grid Grid.Row="1" Margin="10" >
            <Grid.RowDefinitions>

                <RowDefinition Height="4*" />
                <RowDefinition Height="6*" />
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Background="WhiteSmoke" Padding="10">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="10" HorizontalAlignment="Stretch">
                        <TextBlock Text="Add New User" FontSize="30" FontWeight="Bold"  HorizontalAlignment="Center">
                            <TextBlock.Foreground>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="DarkMagenta" Offset="0" />
                                    <GradientStop Color="Red" Offset="1" />
                                </LinearGradientBrush>
                            </TextBlock.Foreground>
                        </TextBlock>


                        <!-- User Info -->
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- User ID -->
                            <Grid Grid.Column="0" Margin="10" Padding="1" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Label -->
                                <TextBlock Text="User ID:" VerticalAlignment="Center" Margin="0,0,5,0" Grid.Row="0" Grid.Column="0"/>

                                <!-- Input box -->
                                <TextBox x:ConnectionId='22' x:Name="UserIdBox"
             Grid.Row="0"
             Grid.Column="1"
             BorderBrush="Gray"
             BorderThickness="1"
             Background="White"/>

                                <!-- Validation message below the TextBox -->
                                <TextBlock x:ConnectionId='23' x:Name="UserIdValidation"
               Grid.Row="1"
               Grid.Column="1"
               Foreground="Red"
               FontSize="12"
               Visibility="Collapsed"
               Text="User ID validation message"/>
                            </Grid>


                            <!-- First Name -->
                            <Grid Grid.Column="1" Margin="5" Padding="1" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="First Name:" VerticalAlignment="Center" Margin="0,0,5,0" Grid.Column="0" Grid.Row="0"/>
                                <TextBox x:ConnectionId='20' x:Name="FirstNameBox"  BorderBrush="Gray" BorderThickness="1" Background="White" Grid.Column="1" Grid.Row="0"/>
                                <TextBlock x:ConnectionId='21' x:Name="FirstNameValidation" Foreground="Red" FontSize="12" Visibility="Collapsed" Text="First Name validation message" Grid.Column="1" Grid.Row="1" />
                            </Grid>

                            <!-- Last Name -->
                            <Grid Grid.Column="2" Margin="5,0,0,0" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Last Name:" VerticalAlignment="Center" Margin="0,0,5,0"  Grid.Column="0" Grid.Row="0"/>
                                <TextBox x:ConnectionId='18' x:Name="LastNameBox"  BorderBrush="Gray" BorderThickness="1" Background="White"  Grid.Column="1" Grid.Row="0"/>
                                <TextBlock x:ConnectionId='19' x:Name="LastNameValidation" Foreground="Red" FontSize="12" Visibility="Collapsed" Text="Last Name validation message"  Grid.Column="1" Grid.Row="1"/>
                            </Grid>
                        </Grid>

                        <!-- Role and Status -->
                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>


                            <!-- Role -->
                            <Grid Grid.Column="0" Margin="5" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="User Role: ." VerticalAlignment="Center"  Grid.Column="0" Grid.Row="0"/>
                                <ComboBox x:ConnectionId='16' x:Name="UserRoleBox"
                                          Width="350"
                              Grid.Column="1"
                              Grid.Row="0"
                              PlaceholderText="  ---Select---"
                              BorderBrush="Gray"
                              BorderThickness="1"
                              Background="White">
                                    <ComboBoxItem Content="Admin"/>
                                    <ComboBoxItem Content="User"/>
                                </ComboBox>
                                <TextBlock x:ConnectionId='17' x:Name="RoleValidation" Foreground="Red" FontSize="12" Visibility="Collapsed" Text="Role validation message"  Grid.Column="1" Grid.Row="1"/>
                            </Grid>

                            <!-- Status -->
                            <Grid Grid.Column="1" Margin="5" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Status: " VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <ComboBox x:ConnectionId='15' x:Name="StatusBox"
                              Grid.Column="1"
                                          Width="350"
                              PlaceholderText="   ---Select---"
                              BorderBrush="Gray"
                              BorderThickness="1"
                              Background="White">
                                    <ComboBoxItem Content="Active"/>
                                    <ComboBoxItem Content="Suspended"/>
                                </ComboBox>
                            </Grid>
                        </Grid>

                        <!-- Buttons -->
                        <StackPanel Orientation="Horizontal" Margin="5,10,0,0" Spacing="10" HorizontalAlignment="Center">
                            <Button x:ConnectionId='13' x:Name="AddUserButton"
                        Content="Add User"
                        Width="120"
                        Background="MediumVioletRed"
                        Foreground="White"
                        CornerRadius="4"
                                               />
                            <Button x:ConnectionId='14' Content="Cancel"
                        Width="120"
                        Background="Red"
                        Foreground="White"
                        CornerRadius="4"
                                           />
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>


            <Border Grid.Row="1" Background="WhiteSmoke" Padding="5" Margin="0,5,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Header -->
                        <RowDefinition Height="*"/>
                        <!-- Data rows -->
                    </Grid.RowDefinitions>

                    <!-- Header Row -->
                    <Grid Background="#DDD" Padding="10" Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2.5*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="User ID" FontWeight="Bold" Grid.Column="0" HorizontalAlignment="Center"/>
                        <TextBlock Text="First Name" FontWeight="Bold" Grid.Column="1" HorizontalAlignment="Center"/>
                        <TextBlock Text="Last Name" FontWeight="Bold" Grid.Column="2" HorizontalAlignment="Center"/>
                        <TextBlock Text="Role" FontWeight="Bold" Grid.Column="3" HorizontalAlignment="Center"/>
                        <TextBlock Text="Status" FontWeight="Bold" Grid.Column="4" HorizontalAlignment="Center"/>
                        <TextBlock Text="Created" FontWeight="Bold" Grid.Column="5" HorizontalAlignment="Center"/>
                        <TextBlock Text="Actions" FontWeight="Bold" Grid.Column="6" Grid.ColumnSpan="2" HorizontalAlignment="Center"/>
                    </Grid>

                    <!-- ItemsRepeater with shared layout -->
                    <ItemsRepeater x:ConnectionId='2' Grid.Row="1"                                           Margin="0,0,0,0">
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate                        >
                                <!-- Use the SAME column structure as header -->
                                <Grid x:ConnectionId='4' Padding="10" Background="White" BorderBrush="#CCC" BorderThickness="0,0,0,1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2.5*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="100"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock x:ConnectionId='5'                        Grid.Column="0" HorizontalAlignment="Center"/>
                                    <TextBlock x:ConnectionId='6'                           Grid.Column="1" HorizontalAlignment="Center"/>
                                    <TextBlock x:ConnectionId='7'                          Grid.Column="2" HorizontalAlignment="Center"/>
                                    <TextBlock x:ConnectionId='8'                          Grid.Column="3" HorizontalAlignment="Center"/>
                                    <TextBlock x:ConnectionId='9'                        Grid.Column="4" HorizontalAlignment="Center"/>
                                    <TextBlock x:ConnectionId='10'                           Grid.Column="5" HorizontalAlignment="Center"/>
                                    <Button x:ConnectionId='11' Content="Update" Grid.Column="6" Background="MediumOrchid" Foreground="White" 
                                                               CornerRadius="4" HorizontalAlignment="Center"/>
                                    <Button x:ConnectionId='12' Content="Delete" Grid.Column="7" Background="Red" Foreground="White" 
                                                               CornerRadius="4" HorizontalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                </Grid>

            </Border>



        </Grid>

        <!-- Footer Control -->
        <controls:FooterControl Grid.Row="2" />
    </Grid>
</Page>

