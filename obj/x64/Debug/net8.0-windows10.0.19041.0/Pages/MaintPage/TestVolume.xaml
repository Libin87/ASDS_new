<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ASDS_dev.Pages.MaintPage.TestVolume"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ASDS_dev.Pages.MaintPage"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="using:ASDS_dev.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Main Content -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Header Control -->
        <controls:HeaderControl Grid.Row="0" />

        <!-- Main content placeholder -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="55"/>

                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Background="#414854" Padding="3" Margin="1" >
                <StackPanel Orientation="Horizontal">
                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="DeepSkyBlue" FontSize="25" Padding="10" FontWeight="Bold" Text="Test Volume" />

                    <Grid Width="370" Height="30" Margin="80,0,0,0" HorizontalAlignment="Left">
                        <Rectangle Fill="#5f327d" RadiusX="4" RadiusY="4"/>
                        <TextBlock Text="System Ready For Dispensing Solution" Foreground="White" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
                    </Grid>

                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" FontSize="20" HorizontalAlignment="Right" FontWeight="Bold" Margin="0,10,20,0">
<Run Text="Air : " Foreground="DeepSkyBlue"/>
<Run x:ConnectionId='3' x:Name="AirPressureValue" Text="4.3" Foreground="Orange"/>
<Run Text=" Bar" Foreground="DeepSkyBlue"/>
                </TextBlock>

                <Grid Grid.Row="1" Margin="0,0,30,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Margin="20,17,0,7" VerticalAlignment="Top">
                        <Border Width="54" Height="50" BorderThickness="3" BorderBrush="White"  CornerRadius="45" HorizontalAlignment="Center" Padding="3">
                            <Button Width="42" Height="38" Background="White" Foreground="White" CornerRadius="40" BorderThickness="0">
                                <Image Source="/Assets/music.png" Height="25" Width="25"/>
                            </Button>
                        </Border>
                    </Grid>

                    <Grid Grid.Column="1" Margin="2">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
                            <Image Source="/Assets/valve.png" Height="50" Width="50" HorizontalAlignment="Center" Margin="0,12,0,0"/>
                            <Border Width="70" Height="70" BorderThickness="3" BorderBrush="LimeGreen" CornerRadius="45" HorizontalAlignment="Center" Padding="2">
                                <Button  Width="60" Height="60" Background="DodgerBlue" Foreground="White" CornerRadius="40" BorderThickness="0">
                                    <TextBlock Text="Valve 1" TextWrapping="Wrap" TextAlignment="Center" FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center"  HorizontalAlignment="Center"/>
                                </Button>
                            </Border>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Column="2" Margin="5">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
                            <Image Source="/Assets/valve.png" Height="50" Width="50" HorizontalAlignment="Center" Margin="0,12,0,0"/>
                            <Border Width="70" Height="70" BorderThickness="3" BorderBrush="LimeGreen" CornerRadius="45" HorizontalAlignment="Center" Padding="2">
                                <Button  Width="60" Height="60" Background="DodgerBlue" Foreground="White" CornerRadius="40" BorderThickness="0">
                                    <TextBlock Text="Extran Valve 2" TextWrapping="Wrap" TextAlignment="Center" FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Button>
                            </Border>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Column="3" Margin="5">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
                            <Image Source="/Assets/valve.png" Height="50" Width="50" HorizontalAlignment="Center"  Margin="0,12,0,0"/>
                            <Border Width="70" Height="70" BorderThickness="3" BorderBrush="LimeGreen" CornerRadius="45" HorizontalAlignment="Center" Padding="2">
                                <Button  Width="60" Height="60" Background="DodgerBlue" Foreground="White" CornerRadius="40" BorderThickness="0">
                                    <TextBlock Text="IPA Valve 3" TextWrapping="Wrap" TextAlignment="Center" FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Button>
                            </Border>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Column="4" Margin="5">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
                            <Image Source="/Assets/valve1.png" Height="50" Width="50" HorizontalAlignment="Center" Margin="0,12,0,0"/>
                            <Border Width="70" Height="70" BorderThickness="3" BorderBrush="LimeGreen" CornerRadius="45" HorizontalAlignment="Center" Padding="2">
                                <Button  Width="60" Height="60" Background="DodgerBlue" Foreground="White" CornerRadius="40" BorderThickness="0">
                                    <TextBlock Text="Water Fill V4" TextWrapping="Wrap" TextAlignment="Center" FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Button>
                            </Border>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Column="5" Margin="5">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
                            <Image Source="/Assets/valve1.png" Height="50" Width="50" HorizontalAlignment="Center" Margin="0,12,0,0"/>
                            <Border Width="70" Height="70" BorderThickness="3" BorderBrush="LimeGreen" CornerRadius="45" HorizontalAlignment="Center" Padding="2">
                                <Button  Width="60" Height="60" Background="DodgerBlue" Foreground="White" CornerRadius="40" BorderThickness="0">
                                    <TextBlock Text="IPA Fill V5" TextWrapping="Wrap" TextAlignment="Center" FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Button>
                            </Border>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Column="6" Margin="5">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
                            <Image Source="/Assets/valve1.png" Height="50" Width="50" HorizontalAlignment="Center" Margin="0,12,0,0"/>
                            <Border Width="70" Height="70" BorderThickness="3" BorderBrush="LimeGreen" CornerRadius="45" HorizontalAlignment="Center" Padding="2">
                                <Button  Width="60" Height="60" Background="DodgerBlue" Foreground="White" CornerRadius="40" BorderThickness="0">
                                    <TextBlock Text="IPA Air Fill V6" TextWrapping="Wrap" TextAlignment="Center" FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Button>
                            </Border>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Column="7" Margin="5">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
                            <Image Source="/Assets/PP2.png" Height="50" Width="50" HorizontalAlignment="Center" Margin="0,12,0,0"/>
                            <Border Width="70" Height="70" BorderThickness="3" BorderBrush="LimeGreen" CornerRadius="45" HorizontalAlignment="Center" Padding="2">
                                <Button  Width="60" Height="60" Background="DodgerBlue" Foreground="White" CornerRadius="40" BorderThickness="0">
                                    <TextBlock Text="IPA Purg V7" TextWrapping="Wrap" TextAlignment="Center" FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Button>
                            </Border>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Column="8" Margin="5">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
                            <Image Source="/Assets/valve1.png" Height="50" Width="50" HorizontalAlignment="Center" Margin="0,12,0,0"/>
                            <Border Width="70" Height="70" BorderThickness="3" BorderBrush="LimeGreen" CornerRadius="45" HorizontalAlignment="Center" Padding="2">
                                <Button  Width="60" Height="60" Background="DodgerBlue" Foreground="White" CornerRadius="40" BorderThickness="0">
                                    <TextBlock Text="Water Drain V8" TextWrapping="Wrap" TextAlignment="Center" FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Button>
                            </Border>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Column="9" Margin="5">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
                            <Image Source="/Assets/valve1.png" Height="50" Width="50" HorizontalAlignment="Center" Margin="0,12,0,0"/>
                            <Border Width="70" Height="70" BorderThickness="3" BorderBrush="LimeGreen" CornerRadius="45" HorizontalAlignment="Center" Padding="2">
                                <Button  Width="60" Height="60" Background="DodgerBlue" Foreground="White" CornerRadius="40" BorderThickness="0">
                                    <TextBlock Text="IPA Drain V9" TextWrapping="Wrap" TextAlignment="Center" FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Button>
                            </Border>
                        </StackPanel>
                    </Grid>


                    <Grid Grid.Column="10" Margin="5">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="0">
                            <Image Source="/Assets/Motor.png" Height="70" Width="70" HorizontalAlignment="Center"/>
                            <Border Width="70" Height="70" BorderThickness="3" BorderBrush="LimeGreen" CornerRadius="45" HorizontalAlignment="Center" Padding="2">
                                <Button  Width="60" Height="60" Background="DodgerBlue" Foreground="White" CornerRadius="40" BorderThickness="0">
                                    <TextBlock Text="Pump V1" TextWrapping="Wrap" TextAlignment="Center" FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Button>
                            </Border>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Column="11" Margin="5">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="0">
                            <Image Source="/Assets/Motor.png" Height="70" Width="70" HorizontalAlignment="Center"/>
                            <Border Width="70" Height="70" BorderThickness="3" BorderBrush="LimeGreen" CornerRadius="45" HorizontalAlignment="Center" Padding="2">
                                <Button  Width="60" Height="60" Background="DodgerBlue" Foreground="White" CornerRadius="40" BorderThickness="0">
                                    <TextBlock Text="Extran Pump 2" TextWrapping="Wrap" TextAlignment="Center" FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Button>
                            </Border>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Column="12" Margin="5">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="5">
                            <Image Source="/Assets/Motor.png" Height="70" Width="70" HorizontalAlignment="Center"/>
                            <Border Width="70" Height="70" BorderThickness="3" BorderBrush="LimeGreen" CornerRadius="45" HorizontalAlignment="Center" Padding="2">
                                <Button  Width="60" Height="60" Background="DodgerBlue" Foreground="White" CornerRadius="40" BorderThickness="0">
                                    <TextBlock Text="IPA Pump 3" TextWrapping="Wrap" TextAlignment="Center" FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Button>
                            </Border>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Column="13" Margin="5">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="5">
                            <Image Source="/Assets/Motor.png" Height="70" Width="70" HorizontalAlignment="Center"/>
                            <Border Width="70" Height="70" BorderThickness="3" BorderBrush="LimeGreen" CornerRadius="45" HorizontalAlignment="Center" Padding="2">
                                <Button Width="60" Height="60" Background="DodgerBlue" Foreground="White" CornerRadius="40" BorderThickness="0">
                                    <TextBlock Text="Water Pump 4" TextWrapping="Wrap" TextAlignment="Center" FontSize="13" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Button>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Grid>


                <Grid Grid.Row="2" HorizontalAlignment="Center" Margin="0,5,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>


                    <ComboBox Grid.Row="0" Grid.Column="0" CornerRadius="4" VerticalAlignment="Center" Width="180" SelectedIndex="0">
                        <ComboBoxItem Content="Divosan"/>
                        <ComboBoxItem Content="Extran"/>
                        <ComboBoxItem Content="IPA"/>
                    </ComboBox>
                    <TextBox Grid.Row="0" CornerRadius="4" Grid.Column="1" Text="0" Width="120" TextAlignment="Center" VerticalAlignment="Center" 
                         BorderBrush="Orange" BorderThickness="2" Margin="10"/>
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="ml" VerticalAlignment="Center" Foreground="DeepSkyBlue" FontSize="17"  Margin="15"/>
                    <Button Grid.Row="0" CornerRadius="4" Grid.Column="3" Background="#1E3C72" Padding="5,2" Margin="10" Width="120">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Polygon Points="0,0 0,20 15,10" Fill="LightGray" Width="25" Height="25" Margin="0,4,10,0"/>
                            <TextBlock Text="Run" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Extran" VerticalAlignment="Center" HorizontalAlignment="Right"
                     Foreground="DeepSkyBlue" FontSize="17"  Margin="15"/>
                    <TextBox CornerRadius="4" Grid.Row="1" Grid.Column="1" Text="0" Width="120" TextAlignment="Center" VerticalAlignment="Center" 
     BorderBrush="Orange" BorderThickness="2" Margin="10"/>
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="ml" VerticalAlignment="Center" Foreground="DeepSkyBlue" FontSize="17"  Margin="15"/>
                    <Button CornerRadius="4" Grid.Row="1" Grid.Column="3" Background="#1E3C72" Padding="5,2" Margin="10" Width="120">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Polygon Points="0,0 0,20 15,10" Fill="LightGray" Width="25" Height="25" Margin="0,4,10,0"/>
                            <TextBlock Text="Run" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>


                    <TextBlock Grid.Row="2" Grid.Column="0" Text="IPA" VerticalAlignment="Center" HorizontalAlignment="Right"
                     Foreground="DeepSkyBlue" FontSize="17"  Margin="15"/>
                    <TextBox CornerRadius="4" Grid.Row="2" Grid.Column="1" Text="0" Width="120" TextAlignment="Center" VerticalAlignment="Center" 
     BorderBrush="Orange" BorderThickness="2" Margin="10"/>
                    <TextBlock Grid.Row="2" Grid.Column="2" Text="ml" VerticalAlignment="Center" Foreground="DeepSkyBlue" FontSize="17"  Margin="15"/>
                    <Button CornerRadius="4" Grid.Row="2" Grid.Column="3" Background="#1E3C72" Padding="5,2" Margin="10" Width="120">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Polygon Points="0,0 0,20 15,10" Fill="LightGray" Width="25" Height="25" Margin="0,4,10,0"/>
                            <TextBlock Text="Run" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>


                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Water For Line 1" VerticalAlignment="Center" HorizontalAlignment="Right"
                Foreground="DeepSkyBlue" FontSize="17"  Margin="15"/>
                    <TextBox CornerRadius="4" Grid.Row="3" Grid.Column="1" Text="0" Width="120" TextAlignment="Center" VerticalAlignment="Center" 
BorderBrush="Orange" BorderThickness="2" Margin="10"/>
                    <TextBlock Grid.Row="3" Grid.Column="2" Text="ml" VerticalAlignment="Center" Foreground="DeepSkyBlue" FontSize="17"  Margin="15"/>
                    <Button CornerRadius="4" Grid.Row="3" Grid.Column="3" Background="#1E3C72" Padding="5,2" Margin="10" Width="120">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Polygon Points="0,0 0,20 15,10" Fill="LightGray" Width="25" Height="25" Margin="0,4,10,0"/>
                            <TextBlock Text="Run" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>


                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Water For Line 2" VerticalAlignment="Center" HorizontalAlignment="Right"
                Foreground="DeepSkyBlue" FontSize="17"  Margin="15"/>
                    <TextBox CornerRadius="4" Grid.Row="4" Grid.Column="1" Text="0" Width="120" TextAlignment="Center" VerticalAlignment="Center" 
BorderBrush="Orange" BorderThickness="2" Margin="10"/>
                    <TextBlock Grid.Row="4" Grid.Column="2" Text="ml" VerticalAlignment="Center" Foreground="DeepSkyBlue" FontSize="17"  Margin="15"/>
                    <Button CornerRadius="4" Grid.Row="4" Grid.Column="3" Background="#1E3C72" Padding="5,2" Margin="10" Width="120">
