                    </Button>


                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Water For Line 3" VerticalAlignment="Center" HorizontalAlignment="Right"
                Foreground="DeepSkyBlue" FontSize="17"  Margin="15"/>
                    <TextBox CornerRadius="4" Grid.Row="5" Grid.Column="1" Text="0" Width="120" TextAlignment="Center" VerticalAlignment="Center" 
BorderBrush="Orange" BorderThickness="2" Margin="10"/>
                    <TextBlock Grid.Row="5" Grid.Column="2" Text="ml" VerticalAlignment="Center" Foreground="DeepSkyBlue" FontSize="17"  Margin="15"/>
                    <Button CornerRadius="4" Grid.Row="5" Grid.Column="3" Background="#1E3C72" Padding="5,2" Margin="10" Width="120">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Polygon Points="0,0 0,20 15,10" Fill="LightGray" Width="25" Height="25" Margin="0,4,10,0"/>
                            <TextBlock Text="Run" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
