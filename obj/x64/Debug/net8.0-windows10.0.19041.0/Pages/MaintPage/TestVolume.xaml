                    </Button>

                </Grid>
                <Button x:ConnectionId='2' Grid.Row="5" Grid.Column="5" HorizontalAlignment="Right" VerticalAlignment="Top" Background="#1E3C72" Margin="20,0,20,7" CornerRadius="2"                  >
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
                        <FontIcon Glyph="&#xEC7A;" FontSize="20"  Margin="0,0,10,0" Foreground="Orange"/>
                        <Polygon Points="10,0 0,10 10,20" Fill="LimeGreen" Width="10" Height="20" Margin="0,0,10,0"/>
                        <TextBlock Text="Back" Foreground="White" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
