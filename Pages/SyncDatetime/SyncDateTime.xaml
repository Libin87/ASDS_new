<Page
    x:Class="ASDS_dev.Pages.SyncDatetime.SyncDateTime"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ASDS_dev.Pages.SyncDatetime"
    xmlns:controls="using:ASDS_dev.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <controls:HeaderControl Grid.Row="0"/>

        <!-- Main Date & Time Content -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="20">

            <TextBlock Text="Sync Date &amp; Time"
     FontSize="24"
     FontWeight="Bold"
     Foreground="Black"
     VerticalAlignment="Center" 
                      Margin="40,80,0,0"/>

            <!-- Red Warning Panel -->
            <Border Background="DarkRed" CornerRadius="10" Padding="20" Width="500">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                    <FontIcon Glyph="&#xE823;" Foreground="White" FontSize="30"/>
                    <TextBlock Text="IPC Run Time Version, So Please use 'Windows Settings' for Date and Time Change !" 
                               TextWrapping="Wrap" 
                               Foreground="White" 
                               FontSize="18"
                               TextAlignment="Center"
                               Width="420"/>
                </StackPanel>
            </Border>

            <!-- Purple Date Time Panel -->
            <Border Background="Purple" CornerRadius="10" Padding="20" Width="500">
                <TextBlock x:Name="txtDateTime" 
                           Foreground="White" 
                           FontSize="24"
                           HorizontalAlignment="Center"/>
            </Border>

        </StackPanel>

        <!-- Footer -->
        <controls:FooterControl Grid.Row="2"/>
    </Grid>
</Page>
