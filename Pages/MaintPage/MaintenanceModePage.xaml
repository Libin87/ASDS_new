<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ASDS_dev.Pages.MaintPage.MaintenanceModePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ASDS_dev.Pages.MaintPage"
    xmlns:controls="using:ASDS_dev.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value= "White"/>
            <Setter Property="BorderBrush" Value="Purple"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#44035c" Offset="0"/>
                        <GradientStop Color="#ae72c4" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
        <Storyboard x:Name="ToggleOnStoryboard">
            <DoubleAnimation
        Storyboard.TargetName="ThumbTransform"
        Storyboard.TargetProperty="X"
        To="35"
        Duration="0:0:0.2" />
        </Storyboard>

        <Storyboard x:Name="ToggleOffStoryboard">
            <DoubleAnimation
        Storyboard.TargetName="ThumbTransform"
        Storyboard.TargetProperty="X"
        To="0"
        Duration="0:0:0.2" />
        </Storyboard>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Status + Buttons -->
            <RowDefinition Height="*"/>
            <!-- Main Content -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Header Control -->
        <controls:HeaderControl Grid.Row="0" />

        <!-- New Status Row with Buttons -->
        <Grid Grid.Row="1" Margin="5,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="System ready to dispense" 
                       FontSize="15" 
                       FontWeight="Bold" 
                       Foreground="Black" 
                       VerticalAlignment="Center" />

            <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right" Spacing="3">
                <Button Content="Test Volume" Click="VolumeClick" Width="150" Height="30" Style="{StaticResource RoundedButtonStyle}" />
                <Button Content="Pump Calibration" Click="CalibrationClick" Width="150" Height="30" Style="{StaticResource RoundedButtonStyle}" />
            </StackPanel>
        </Grid>

        <!-- Main Content Grid -->
        <Grid Grid.Row="2" Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Container 1 -->
            <Border BorderBrush="Gray" BorderThickness="2" CornerRadius="10" Margin="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="/Assets/MaintCnt1.png" Width="150" Height="140" Grid.Column="0" VerticalAlignment="Top" Margin="10"/>
                    <StackPanel Grid.Column="0" Margin="10,160,0,0" HorizontalAlignment="Left" Padding="20,0,0,0">
                        <TextBlock Text="Actual" FontSize="14" FontWeight="Bold" />
                    </StackPanel>
                    <StackPanel Grid.Column="0" Margin="10,150,0,0" HorizontalAlignment="Left" Padding="80,0,20,0" >
                        <TextBox Width="75" Text="1537 ml" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Top" Spacing="10">
                        <TextBlock Text="Container 1" Foreground="Black" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Left"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Solvent" FontSize="16" FontWeight="Bold" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <ComboBox Width="150" PlaceholderText="Select Solvent">
                                <ComboBoxItem Content="Divosan"/>
                                <ComboBoxItem Content="Extran"/>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Capacity" FontSize="16" FontWeight="Bold" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBox Width="100" Text="5"/>
                            <TextBlock Text="L" FontSize="16" FontWeight="Bold" Margin="5,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <Button Content="RPM Test" Width="70" Height="30" FontSize="12" Style="{StaticResource RoundedButtonStyle}"/>
                            <Button Content="Prime" Width="70" Height="30" FontSize="12" Style="{StaticResource RoundedButtonStyle}"/>
                            <Button Content="Set" Width="70" Height="30" FontSize="12" Style="{StaticResource RoundedButtonStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Container 2 -->
            <Border Grid.Row="0" Grid.Column="1" CornerRadius="15" BorderBrush="Gray" BorderThickness="2" Margin="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="/Assets/MaintCnt1.png" Width="150" Height="140" Grid.Column="0" VerticalAlignment="Top" Margin="10"/>
                    <StackPanel Grid.Column="0" Margin="10,155,0,0" HorizontalAlignment="Left" Padding="20,0,0,0">
                        <TextBlock Text="Actual" FontSize="14" FontWeight="Bold" />
                    </StackPanel>
                    <StackPanel Grid.Column="0" Margin="10,150,0,0" HorizontalAlignment="Left" Padding="80,0,20,0" >
                        <TextBox Width="90" Text="1537 ml" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Top" Spacing="10">
                        <TextBlock Text="Container 2" Foreground="Black" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Left"/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Solvent" FontSize="16" FontWeight="Bold" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBox Width="120" Text="Extran"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Capacity" FontSize="16" FontWeight="Bold" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBox Width="100" Text="5"/>
                            <TextBlock Text="L" FontSize="16" FontWeight="Bold" Margin="5,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <Button Content="RPM Test" Width="70" Height="30" FontSize="12" Style="{StaticResource RoundedButtonStyle}"/>
                            <Button Content="Prime" Width="70" Height="30" FontSize="12" Style="{StaticResource RoundedButtonStyle}"/>
                            <Button Content="Set" Width="70" Height="30" FontSize="12" Style="{StaticResource RoundedButtonStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- IPA Tank -->
            <Border Grid.Row="1" Grid.Column="0" CornerRadius="15" BorderBrush="Gray" BorderThickness="2" Margin="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="/Assets/MaintCnt3.png" Width="150" Height="160" Grid.Column="0" VerticalAlignment="Top" Margin="10"/>
                    <StackPanel Grid.Column="0" Margin="10,160,0,0" HorizontalAlignment="Left" Padding="20,0,0,0">
                        <TextBlock Text="Actual" FontSize="14" FontWeight="Bold" />
                    </StackPanel>
                    <StackPanel Grid.Column="0" Margin="10,150,0,0" HorizontalAlignment="Left" Padding="80,0,20,0" >
                        <TextBox Width="75" Text="1537 ml" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Top" Spacing="10">
                        <TextBlock Text="Container 3" Foreground="Black" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Left"/>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <!-- Label -->
                                <ColumnDefinition Width="100"/>
                                <!-- TextBox -->
                                <ColumnDefinition Width="Auto"/>
                                <!-- Unit -->
                            </Grid.ColumnDefinitions>

                            <!-- Row 0: Solvent -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Solvent" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="IPA" Margin="0,0,0,5"/>

                            <!-- Row 1: Capacity -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Capacity" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="5" Margin="0,0,0,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="2" Text="L" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0,0,0"/>

                            <!-- Row 2: Actual -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Actual" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="5" Margin="0,0,0,5"/>
                            <TextBlock Grid.Row="2" Grid.Column="2" Text="L" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Margin="5,0,0,0"/>
                        </Grid>
                        <StackPanel Orientation="Horizontal" Spacing="10">

                            <ToggleButton x:Name="CustomToggle"
              Width="60"
              Height="30"
              Background="Transparent"
              BorderThickness="0"
              Checked="CustomToggle_Checked"
              Unchecked="CustomToggle_Unchecked">
                                <Grid>
                                    <Border x:Name="ToggleBackground"
                Width="40"
                Height="20"
                Background="Gray"
                CornerRadius="15"/>
                                    <TextBlock x:Name="ToggleLabel"
                   Text="OFF"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="White"
                   FontWeight="Bold"
                   FontSize="10"/>
                                    <Ellipse x:Name="ToggleThumb"
                 Width="20"
                 Height="20"
                 Fill="White"
                 VerticalAlignment="Center"
                 HorizontalAlignment="Left"
                 Margin="5,0,0,0">
                                        <Ellipse.RenderTransform>
                                            <TranslateTransform x:Name="ThumbTransform" X="0"/>
                                        </Ellipse.RenderTransform>
                                    </Ellipse>
                                </Grid>
                            </ToggleButton>


                            <Button Content="Prime" Width="70" Height="30" FontSize="12" Style="{StaticResource RoundedButtonStyle}"/>
                            <Button Content="Drain" Width="70" Height="30" FontSize="12" Style="{StaticResource RoundedButtonStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Water Tank -->
            <Border Grid.Row="1" Grid.Column="1" CornerRadius="15" BorderBrush="Gray" BorderThickness="2" Margin="5">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Water Tank" Foreground="Cyan" FontSize="18" FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Footer Control -->
        <controls:FooterControl Grid.Row="3" />
    </Grid>
</Page>