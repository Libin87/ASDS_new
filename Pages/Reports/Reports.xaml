<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ASDS_dev.Pages.Reports.Reports"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:ASDS_dev.Controls"
    xmlns:local="using:ASDS_dev.Pages.Reports"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Main Content -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>
        <!-- Header Control -->
        <controls:HeaderControl Grid.Row="0" />
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid x:Name="SidebarGrid" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition x:Name="SidebarColumn" Width="150" />
                        <ColumnDefinition Width="32" />
                    </Grid.ColumnDefinitions>
                    <StackPanel x:Name="Sidebar" Grid.Column="0" Background="#c9c9c9">
                        <Button Content="Audit"  FontWeight="SemiBold" Background="#1E3C72" Foreground="White" Tag="Audit" Margin="10" CornerRadius="2" BorderThickness="0" Width="115" HorizontalAlignment="Center" Click="SidebarButton_Click"/>
                        <Button Content="Events" FontWeight="SemiBold" Background="#1E3C72" Foreground="White" Tag="Events" Margin="10" CornerRadius="2" BorderThickness="0" Width="115" HorizontalAlignment="Center" Click="SidebarButton_Click"/>
                        <Button Content="Users"  FontWeight="SemiBold" Background="#1E3C72" Foreground="White" Tag="Users" Margin="10" CornerRadius="2" BorderThickness="0" Width="115" HorizontalAlignment="Center"  Click="SidebarButton_Click"/>
                        <Button Content="Alarm"  FontWeight="SemiBold" Background="#1E3C72" Foreground="White" Tag="Alarm" CornerRadius="2" BorderThickness="0" Margin="10" Width="115" HorizontalAlignment="Center" Click="SidebarButton_Click"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Background="#c9c9c9" HorizontalAlignment="Center" Height="3000" VerticalAlignment="Top">
                        <ToggleButton x:Name="ToggleSidebar" Content="â˜°" FontSize="24" Background="Transparent" BorderThickness="0" Foreground="Black" FontWeight="Bold"
                 Padding="0" Margin="5" Click="ToggleSidebar_Click" HorizontalAlignment="Center" VerticalAlignment="Top" FocusVisualPrimaryThickness="0" FocusVisualSecondaryThickness="0"/>
                    </StackPanel>
                </Grid>
            </Grid>
            <Grid x:Name="ContentArea" Grid.Column="1">
            </Grid>
        </Grid>
        <!-- Footer Control -->
        <controls:FooterControl Grid.Row="2" />
    </Grid>
</Page>
